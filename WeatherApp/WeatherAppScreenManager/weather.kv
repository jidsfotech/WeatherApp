#: kivy 1.10.0
#: import ScreenManager kivy.uix.screenmanager.ScreenManager
#: import Screen kivy.uix.screenmanager.ScreenManager
#: import TestScreenManag TestScreenManag
#: import ListAdapter kivy.adapters.listadapter.ListAdapter

WeatherRoot:
<WeatherRoot>:
    AddLocationForm:
    
<AddLocationForm>:
    name: 'AddLocationForm'
    search_results: seach_results_list
    canclebutton: canclebutton
    BoxLayout:
        orientation: "vertical"
        search_results: seach_results_list
        BoxLayout:
            height: "40dp"
            size_hint_y: None
            TextInput:
                id: CityToSearch
                multiline: False
                focus:True
                size_hint_x: 50
                on_text_validate:root.search_location()
            Button:
                text: "search"
                size_hint_x: 25
                on_press: root.search_location()
            Button:
                text: "Current Location"
                size_hint_x: 25
                on_press: app.root.show_current_weather(None)
        RecycleView:
            id: seach_results_list
            viewclass: 'LocationButton'
            RecycleBoxLayout:
                default_size: None, dp(56)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
                spacing: dp(2)

        Button:
            id: canclebutton
            height: "0dp"
            size_hint_y: None
            text: ""
            on_press: app.root.show_current_weather(None)   
            
<LocationButton>:
    text:' '.join(self.location)
    height: "40dp"
    size_hint_y: None
    on_press: app.root.show_current_weather(self.location)
    
<CurrentWeatherForm>:
    name:"CurrentWeatherForm"
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            Label:
                text:"{} ({})".format(root.location[0], root.location[1])
                font_size: "30dp"
            Label:
                text: "{}".format(root.temp)
                ont_size: "30dp"
        Label:
            text: root.conditions
        BoxLayout:
            orientation: "horizontal"
            Label:
                text:"Low: {}".format(root.temp_min)
            Label:
                text: "High: {}".format(root.temp_max)
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: "40dp"
            Button:
                text: "Add Location"
                on_press: app.root.show_addLocationForm()
                background_color: .7, .7, 1, 1
            Button:
                text: "Forecast"
                background_color: .7, .7, 1, 1


                        
<Error_Msg_Popup>:
    size_hint:(None, None)


    